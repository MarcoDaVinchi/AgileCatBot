{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./global.d.ts", "./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "package-json": ["./package.json"],
      "@src/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@constants/*": ["./src/constants/*"],
      "@controller/*": ["./src/controller/*"],
      "@model/*": ["./src/model/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
}
