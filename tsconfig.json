{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "typeRoots": ["./global.d.ts"],
    "baseUrl": "./",
    "paths": {
      "package-json": ["./package.json"],
      "@src/*": ["./src/*"],
      "@api/*": ["./src/api/*"],
      "@config/*": ["./src/config/*"],
      "@constants/*": ["./src/constants/*"],
      "@db/*": ["./src/db/*"],
      "@models/*": ["./src/models/*"],
      "@assets/*": ["./src/assets/*"],
      "@utils/*": ["./src/utils/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@reducers/*": ["./src/reducers/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./**/*"]
}